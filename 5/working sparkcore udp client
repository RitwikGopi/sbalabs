UDP Udp;


void setup() {
    pinMode(D7, OUTPUT);
    digitalWrite(D7, LOW);

    Udp.begin(4000);
}

void loop() {
    Udp.beginPacket(IPAddress(192,168,0,17), 4000);
    Udp.write((unsigned char*)"8", 12);
    Udp.endPacket();

    digitalWrite(D7, LOW);
    delay(200);
    digitalWrite(D7, HIGH);
}
